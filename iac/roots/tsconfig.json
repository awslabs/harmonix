{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "outDir": "dist",
        "types": ["node"],
        "target": "ES2020",
        "lib": [
          "es2020",
          "dom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "typeRoots": [
          "./node_modules/@types"
        ],
        "resolveJsonModule": true,
    },
    "include": [
      "**/src/**/*.ts"
      ],
    "exclude": [
        "node_modules",
        "cdk.out",
        "dist"
      ]
}